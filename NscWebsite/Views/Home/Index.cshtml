                <div class="input-group">

                    <input type="text" class="form-control" id="mobsearch" placeholder="Search in contoso.com" style="font-size: 18px;border-color: #2c353f;background-color: #2c353f;color: #ffffff;max-width: 2000px;padding-top: 7px;height: 40px;margin-top: 6px;">
