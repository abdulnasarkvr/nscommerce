    </div>
        @*@RenderBody()*@


        <div id="sidnavWrapper" class="sidnavWrapper" onclick="closeNav()">
        </div>
        <div id="mySidenav" class="sidenav ng-enter-menu">
            @*<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>*@

            <div class="row" style="height:50px;background-color:#2c353f" id="profile-btn">
                <a href="#" class="sidenav-m-profile">Hello, Abdul <span class="glyphicon glyphicon-cog" style="float: right;"></span></a>
            </div>
            <div class="row menu-tab account-tab ng-enter">
               
                <a href="#" class="go-back sidenav-m-goback"><span class="glyphicon glyphicon-chevron-left"></span> Back To Menu</a>
                <a href="#" class="sidenav-m-head">PROFILE</a>

                <a href="#"  class="sidenav-m-item">My Orders</a>
                <a href="#"  class="sidenav-m-item">Payment Types</a>
                <a href="#"  class="sidenav-m-item">Account</a>
                <a href="#"  class="sidenav-m-item">Addresses</a>

             
            </div>
            <div class="row menu-tab category-tab">
              
                <a href="#" class="sidenav-m-head">CATEGORIES</a>
                <a href="#" class="sidenav-m-item">Fashion For Men <span class="glyphicon glyphicon-chevron-right side-m-right-arrow"></span></a>               

                <a href="#"  class="sidenav-m-item">Fashion For Women</a>
                <a href="/product/list" class="sidenav-m-item">Kids & Baby </a>
                <a href="#"  class="sidenav-m-item">Electronics</a>
                <a href="#"  class="sidenav-m-item">Books & Media</a>
                

            </div>
        
        </div>

        <div id="main">

            <div ng-view class="ng-enter"></div>

        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year contoso.com</p>
        </footer>




        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/app")



        <script>
            function openNav() {

                $('.menu-tab').hide();
                $('.category-tab').show();

                //$('#mySidenav').show();
               document.getElementById("mySidenav").style.width = "250px";
                document.getElementById("sidnavWrapper").style.width = "100%";
            }

            function closeNav() {

                $('.menu-tab').hide();
                $('.category-tab').show();
                //$('#mySidenav').hide();
                document.getElementById("mySidenav").style.width = "0";
                document.getElementById("sidnavWrapper").style.width = "0%";
            }

            $(function () {
                $('.sidenav-m-item').click(function () {
                    document.getElementById("mySidenav").style.width = "0";
                    document.getElementById("sidnavWrapper").style.width = "0%";
                });

                $('#backbutton').click(function () {
                    history.back();
                });


                $('#searc-icon').click(function () {
                    $('#search-box').show();
                    $('#mobsearch').val('');
                    $('#mobsearch').focus();
                });

                $('#backbutton-search').click(function () {
                    $('#search-box').attr("style","display:none !important");
                });

                $('#profile-btn').click(function () {
                    $('.menu-tab').hide();
                    $('.account-tab').show();
                });

                $('.go-back').click(function () {
                    $('.menu-tab').hide();
                    $('.category-tab').show();
                });

                //menu-tab account-tab profile-btn go-back category-tab


            });



        </script>
</body>
</html>
