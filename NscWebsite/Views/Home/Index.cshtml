    <script>
       function openNav() {
           document.getElementById("mySidenav").style.width = "250px";
           document.getElementById("sidnavWrapper").style.width = "100%";
       }

       function closeNav() {
           document.getElementById("mySidenav").style.width = "0";
           document.getElementById("sidnavWrapper").style.width = "0%";
        }

        $(function () {
            $('.sidenav a').click(function () {
                document.getElementById("mySidenav").style.width = "0";
                document.getElementById("sidnavWrapper").style.width = "0%";
            });
          });
